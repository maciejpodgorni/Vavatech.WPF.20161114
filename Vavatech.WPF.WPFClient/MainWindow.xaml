<Window x:Class="Vavatech.WPF.WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vavatech.WPF.WPFClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <StackPanel>
        <Button Background="Green" Width="300" Height="100">
            <StackPanel Orientation="Horizontal">
                <CheckBox Content="Opcja 1" />
                <CheckBox Content="Opcja 2" />
            </StackPanel>
        </Button>
        
        
        <Button Background="Green" Content="Hello 2" />
        <Button>
            <Button.Content>
                Hello 3
            </Button.Content>
            <Button.Background>
                <LinearGradientBrush>
                    <GradientStop Color="Red" Offset="0" />
                    <GradientStop Color="Blue" Offset="1" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </StackPanel>
    
</Window>
