<Window x:Class="Vavatech.WPF.WPFClient.StackPanelFormView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vavatech.WPF.WPFClient"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="StackPanelFormView" Height="300" Width="300">

    <Window.Resources>
        
        <!-- Const -->
        <sys:Double x:Key="Width">120</sys:Double>
        <sys:Double x:Key="Height">30</sys:Double>
        <SolidColorBrush x:Key="BackgroundButtonBrush">Green</SolidColorBrush>


        <!-- Styles -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BackgroundButtonBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="100" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Width" Value="{StaticResource Width}" />
            <Setter Property="Height" Value="{StaticResource Height}" />
            <Setter Property="Foreground" Value="Blue" />
        </Style>
        
    </Window.Resources>
    
    <Grid>
        <StackPanel>

            <!-- Imię -->
            <StackPanel Orientation="Horizontal">
                <Label 
                   Style="{StaticResource LabelStyle}"
                    Content="Imię"  />
                <TextBox Width="200" />
            </StackPanel>

            <!-- Nazwisko -->
            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource LabelStyle}"
                       Content="Nazwisko"  />
                <TextBox Width="200" />
            </StackPanel>

            <!-- Wiek -->
            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource LabelStyle}"
                       Content="Wiek"  />
                <TextBox Width="200" />
            </StackPanel>

            <!-- Kolor -->
            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource LabelStyle}"
                       Content="Kolor"  />
                <TextBox Width="200" />
            </StackPanel>

            <Button Style="{StaticResource ButtonStyle}">OK</Button>
            <Button Style="{StaticResource ButtonStyle}">Cancel</Button>
            
        </StackPanel>
        
    </Grid>
</Window>
